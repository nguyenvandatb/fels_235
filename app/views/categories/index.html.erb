<% provide :title, t(".title") %>
<div id="panel-category">
  <div class="container">
    <div class="row">
      <h2 class="text-center"><%= t ".title" %></h2>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_tag @categories_path, method: :get,
          class: "form_category_search" do %>
          <%= render "search_form" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% if @categories.any? %>
        <%= render @categories %>
      <% else %>
        <div class="alert alert-warning">
          <%= t ".not_found_category" %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <%= will_paginate %>
      </div>
    </div>
</div>
</div>
