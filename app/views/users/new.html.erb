<%= provide :title, t(".register") %>
<div class="signup" id="signup">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-xs-12 col-md-offset-4">
        <%= form_for @user, html: {class: "form-signup"} do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="form-title">
            <h2>
              <span class="text"><%= t ".title" %></span>
            </h2>
          </div>
          <div class="form-group">
            <%= f.label :name do %>
              <%= t(".name") %> <span>*</span>
            <% end %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email do %>
              <%= t(".email") %> <span>*</span>
            <% end %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :passowrd do %>
              <%= t(".password") %> <span>*</span>
            <% end %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation do %>
              <%= t(".password_confirmation") %> <span>*</span>
            <% end %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit t(".submit"), class: "btn btn-primary" %>
          </div>
          <div class="form-title">
            <h2>
              <span class="text"><%= link_to t(".login"), login_path %></span>
            </h2>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
