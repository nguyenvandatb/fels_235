<div id="header">
   <div class="container">
    <nav class="navbar navbar-default">
      <div class="container-fulid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed"
            data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <%= link_to t("website_title"), root_url, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to t("about"), about_path %></li>
            <li><%= link_to t("help"), help_path %></li>
            <% if logged_in? %>
              <li><%= link_to t("lesson"), categories_path %></li>
            <% end %>
          </ul>
        <ul class="nav navbar-nav navbar-right"">
          <% if logged_in? %>
            <li><%= link_to t("members"), users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                role="button" aria-haspopup="true" aria-expanded="false">
                <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("profile"), current_user %></li>
                <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
                <li><%= link_to t("logout"), logout_path, method: :delete %></li>
                <% if current_user.is_admin? %>
                  <li><%= link_to t("super_admin"), admin_root_path %></li>
                <% end %>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("login"), login_path %></li>
            <li><%= link_to t("register"), signup_path %></li>
          <% end %>
        </ul>
        </div>
      </div>
    </nav>
  </div>
</div>
