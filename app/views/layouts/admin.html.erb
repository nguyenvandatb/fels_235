<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= full_title yield :title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "admin", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "admin", "data-turbolinks-track": true %>
</head>
<body>
  <div id="wrapper">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse"
          data-target=".navbar-ex1-collapse">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="index.html"><%= t ".title" %></a>
      </div>
      <ul class="nav navbar-right top-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-user"></i> <%= current_user.name %><b class="caret"></b>
           </a>
           <ul class="dropdown-menu">
             <li>
               <a href="#"><i class="fa fa-fw fa-user"></i> <%= t ".profile" %></a>
             </li>
             <li>
               <a href="#"><i class="fa fa-sign-out"></i> <%= t ".logout" %></a>
             </li>
           </ul>
        </li>
      <ul>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav side-nav">
          <li class="active">
            <a href="<%= admin_root_url %>">
              <i class="fa fa-fw fa-dashboard"></i> <%= t ".dashboard" %>
            </a>
          </li>
          <li>
            <a href="javascript:;" data-toggle="collapse" data-target="#demo">
              <i class="fa fa-list-alt"></i> <%= t ".categories" %>
                <i class="fa fa-fw fa-caret-down"></i></a>
              <ul id="demo" class="collapse">
                <li>
                  <a href="#"><%= t ".all_categories" %></a>
                </li>
                <li>
                  <%= link_to t(".new_categories"), new_admin_category_path %>
                </li>
              </ul>
          </li>
          <li>
            <a href="javascript:;" data-toggle="collapse" data-target="#words">
              <i class="fa fa-file-word-o"></i> <%= t ".words" %>
                <i class="fa fa-fw fa-caret-down"></i></a>
              <ul id="words" class="collapse">
                <li>
                  <a href="#"><%= t ".all_words" %></a>
                </li>
                <li>
                  <%= link_to t(".new_words"), new_admin_word_path %>
                </li>
              </ul>
          </li>
           <li>
            <a href="javascript:;" data-toggle="collapse" data-target="#users">
              <i class="fa fa-users"></i> <%= t ".users" %>
                <i class="fa fa-fw fa-caret-down"></i></a>
              <ul id="users" class="collapse">
                <li>
                  <a href="#"><%= t ".all_users" %></a>
                </li>
                <li>
                  <a href="#"><%= t ".new_user" %></a>
                </li>
                <li>
                  <a href="#"><%= t ".show_user" %></a>
                </li>
              </ul>
          </li>
          <li class="active">
            <a href="#"><i class="fa fa-undo"></i> <%= t ".back_website" %></a>
          </li>
        </ul>
      </div>
    </nav>
    <div id="page-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">
              <%= yield :title %>
            </h1>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <% flash.each do |message_type, message| %>
              <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
            <% end %>
          </div>
        </div>
        <%= yield %>
        <div class="row">
          <div class="col-lg-12">
            <div class="content">
              <div class="visible">
                <ul>
                  <li><%= t ".hello" %></li>
                  <li><%= t ".admin" %></li>
                </ul>
              </div>
            </div>
            <div class="copyright">
              <span><%= t ".copyright" %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
